<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <a class="btn btn-outline-secondary btn-block edit_user_176" href="<%= edit_user_path %>">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>
        
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <label>Title</label>
            <%= f.text_field :title %>
          <label>Opinion</label>
            <%= f.text_area :body %>
          <button type="submit" class="btn btn-success">Create Book</button>
        <% end %>
      </div>
          
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <a href="<%= user_path(id: current_user) %>">
                  <%= image_tag @user.get_profile_image(100,100) %>
                </a>
              </td>
              <td>
                <a href="<%= book_path(id: current_user) %>">
                  <%= book.title %>
                </a>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
