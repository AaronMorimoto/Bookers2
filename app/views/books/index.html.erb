<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'users/list', user: @user, book: @book %>
          
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <a href="<%= user_path(book.user) %>">
                  <%= image_tag book.user.get_profile_image(100,100) %>
                </a>
              </td>
              <td>
                <a href="<%= book_path(book.id) %>">
                  <%= book.title %>
                </a>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
